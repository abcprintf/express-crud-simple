extends layout

block content

  h1= 'NodeJS, Express CRUD'

  a(href='/create', class='btn btn-success mb-1') Create

  div
    table.table.table-bordered
      thead
        tr: th #
            th Username
            th Email
            th Mobile
            th Action
      tbody
        each val, index in data_arrys
          tr
            td #{index+1}
            td #{val.username}
            td #{val.email}
            td #{val.mobile}
            td: a(href='/edit/' + val._id, class="btn btn-warning") Edit